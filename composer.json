{
    "name": "slam/phpstan-extensions",
    "type": "phpstan-extension",
    "description": "Slam extension of phpstan",
    "license": "MIT",
    "authors": [
        {
            "name": "Filippo Tessarotto",
            "email": "zoeslam@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4 || ^8.0",
        "nikic/php-parser": "^4.10.0",
        "phpstan/phpstan": "^0.12.0"
    },
    "require-dev": {
        "nette/di": "^3.0",
        "nette/neon": "^3.2",
        "phpstan/phpstan-php-parser": "^0.12.2",
        "phpstan/phpstan-phpunit": "^0.12.16",
        "phpunit/phpunit": "^9.4",
        "slam/php-cs-fixer-extensions": "^2.0",
        "slam/php-debug-r": "^1.6"
    },
    "extra": {
        "phpstan": {
            "includes": [
                "conf/slam-rules.neon"
            ]
        }
    },
    "autoload": {
        "psr-4": {
            "SlamPhpStan\\": "lib/"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests/"
        ],
        "files": [
            "tests/TestAsset/SymfonyFilesystemRule/mkdir.php",
            "tests/TestAsset/SymfonyProcessRule/shell_exec.php"
        ]
    }
}
